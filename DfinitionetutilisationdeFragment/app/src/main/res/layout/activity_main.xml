<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Before" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.danielstone.materialaboutlibrarydemo.dfinitionetutilisationdefragment.BlankFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        tools:layout="@layout/fragment_blank" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="After"
        android:layout_below="@+id/fragment"/>

    <fragment
        android:id="@+id/fragment2"
        android:name="com.danielstone.materialaboutlibrarydemo.dfinitionetutilisationdefragment.SecondFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        tools:layout="@layout/fragment_second" />
</RelativeLayout>